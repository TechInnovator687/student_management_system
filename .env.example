# ──────────────────────────────────────────
#   App Settings
# ──────────────────────────────────────────
SERVICE_NAME=axion
ENV=development
USER_PORT=5111
ADMIN_PORT=5222
ADMIN_URL=http://localhost:5222

# ──────────────────────────────────────────
#   MongoDB Atlas
#   Get this from: https://cloud.mongodb.com
#   Format: mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/<dbname>
# ──────────────────────────────────────────
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/axion?retryWrites=true&w=majority&appName=your_app

# ──────────────────────────────────────────
#   JWT Secrets
#   Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# ──────────────────────────────────────────
LONG_TOKEN_SECRET=your_long_token_secret_here
SHORT_TOKEN_SECRET=your_short_token_secret_here
NACL_SECRET=your_nacl_secret_here
